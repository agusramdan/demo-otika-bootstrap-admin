<?xml version="1.0"?>
<thlogic>
    <attr sel="head">
        <attr sel="meta" data-th-remove="all" />
        <attr sel="link" data-th-remove="all" />
    </attr>
<!--    <attr sel="#head-links-css">-->
<!--        <attr sel="link" data-th-attrprepend="href=@{/}"/>-->
<!--    </attr>-->
<!--    <attr sel="#libraies-script">-->
<!--        <attr sel="script" data-th-attrprepend="src=@{/}"/>-->
<!--    </attr>-->
<!--    <attr sel="#page-script">-->
<!--        <attr sel="script" data-th-attrprepend="src=@{/}"/>-->
<!--    </attr>-->
    <attr sel="#listData" data-th-remove="all-but-first">
        <attr sel="/tr[0]" data-th-each="row : ${list}">
            <attr sel="td.row_username" data-th-text="${row.id}" />
            <attr sel="td.row_firstName" data-th-text="${row.firstName}" />
            <attr sel="td.row_lastName" data-th-text="${row.lastName}" />
            <attr sel="td.row_enabled/div.badge"
                  data-th-classappend="${row.enabled ? 'badge-success' : 'badge-danger'}"
                  data-th-text="${row.enabled ? 'Active' : 'Not Active'}"
            />
            <attr sel="td.row_action/a" data-th-href="${'edit/'+row.id}"/>
        </attr>
    </attr>
</thlogic>

